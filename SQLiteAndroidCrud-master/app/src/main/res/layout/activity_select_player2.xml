<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectPlayer1Activity">

    <TextView
        android:id="@+id/nameTitle3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name_title"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/lstPlayers"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/winsTitle3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginLeft="110dp"
        android:text="@string/wins_title"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/lstPlayers"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/lossesTitle3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"

        android:layout_marginLeft="30dp"
        android:text="@string/losses_title"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/lstPlayers"
        app:layout_constraintStart_toEndOf="@+id/winsTitle3" />

    <TextView
        android:id="@+id/tiesTitle3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"

        android:layout_marginLeft="32dp"
        android:layout_marginEnd="41dp"
        android:layout_marginRight="41dp"
        android:text="@string/ties_title"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/lstPlayers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lossesTitle3" />

    <ListView
        android:id="@+id/lstPlayers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/lossesTitle3"
        app:layout_constraintStart_toStartOf="@+id/lossesTitle3"
        app:layout_constraintTop_toBottomOf="@+id/nameTitle3" />
</android.support.constraint.ConstraintLayout>